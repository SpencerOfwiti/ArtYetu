<%= form_for [:admin, @artist], action: :post do |artist_form| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h4 class="header-title">Artist Information</h4>
          <br>
          <div class="col-lg-12">
            <div class="form-group mb-2">
              <%= artist_form.label :artist_first_name %>
              <%= artist_form.text_field :artist_first_name, class: 'form-control', id: 'artist_first_name', placeholder: 'First name', required: true%>
            </div>

            <div class="form-group mb-2">
              <%= artist_form.label :artist_last_name %>
              <%= artist_form.text_field :artist_last_name, class: 'form-control', id: 'artist_last_name', placeholder: 'Last name', required: true%>
            </div>

            <div class="form-group mb-2">
              <%= artist_form.label :artist_email %>
              <%= artist_form.email_field :artist_email, class: 'form-control', id: 'artist_email', placeholder: 'Email'%>
            </div>

            <div class="form-group mb-2">
              <%= artist_form.label :artist_phone_number%>
              <%= artist_form.telephone_field :artist_phone_number, class: 'form-control', id: 'artist_phone_number', placeholder: 'Phone', required: true%>
            </div>
            <div class="form-group mb-2">
              <%= artist_form.submit "Create appointment", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>