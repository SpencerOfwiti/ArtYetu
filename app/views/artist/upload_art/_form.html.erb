<%= form_with scope: :art, url: artist_upload_art_index_path, local: true do |form| %>
  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, 'error') %> prevented this event from being created</h2>
      <ul>
        <% @art.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <label>Art Title</label>
        <%= form.text_field :title, class:'form-control' %>
      </div>
      <div class="form-group mb-3">
        <label>Art Description</label>
        <%= form.text_field :description, class:'form-control' %>
      </div>
      <div class="form-group mb-3">
        <label>Start Date</label>
        <%= form.date_field :date,  class: 'form-control' %>
      </div>
      <div>
        <label>Start Bid</label>
        <%= form.number_field :start_bid, class:'form-control' %>
      </div>
      <div>
        <label>Image</label>
        <%= form.file_field :image, class: 'form-control' %>
      </div>
    </div>

  </div>
  <%= form.submit class:'btn btn-primary' %>
  <%= link_to 'Delete',
              artist_upload_art_path(form),
              method: :delete,
              data: {confirm: 'Are you Sure?'}, class: 'btn btn-danger'%>
<% end %>